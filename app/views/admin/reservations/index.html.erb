<p id="notice"><%= notice %></p>

<h1>予約一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>映画タイトル</th>
      <th>座席番号</th>
      <th>日時</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.id, edit_admin_reservation_path(reservation.id) %></td>
        <td><%= reservation.schedule.movie.name %></td>
        <td><%= @sheet_number[reservation.sheet_id] %></td>
        <td><%= reservation.date %></td>
        <td><%= reservation.name %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.created_at %></td>
        <td><%= reservation.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @reservations, theme: 'bootstrap-5' %>
<br>

<%= link_to '予約作成', new_admin_reservation_path %>
